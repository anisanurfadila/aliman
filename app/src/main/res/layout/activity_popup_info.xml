<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopupInfo"
    android:background="@color/maghrib">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp"
            >
        <TextView
            android:id="@+id/tv_keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POPUP WINDOW"
            android:textColor="@color/white"
            android:textSize="16dp"
            />


        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arabics"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_below="@id/tv_keterangan"
            android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_arabic"
                android:layout_below="@id/txt"
                android:text="texttexttext"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_alignParentRight="true"/>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardCornerRadius="20dp"
                android:padding="3dp"
                android:layout_below="@id/tv_arabic"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/arti"
                    android:text="Arti"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"
                    ></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_arti"
                        android:text="ARTI AYAT AYAT"
                        android:textSize="16sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:layout_below="@id/arti"

                        ></TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
</ScrollView>

</RelativeLayout>